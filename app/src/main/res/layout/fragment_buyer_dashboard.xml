<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.buyer.BuyerDashboardFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/swipeToRefresh_BuyerDashboardFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/NestedScrollView_BuyerDashboardFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dashboard_bg"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            app:cardBackgroundColor="@color/dashboardCardBuyer"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/commodity"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp" />

                                <TextView
                                    android:id="@+id/tv_Commodity_New_BuyerDashboardFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_medium"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            app:cardBackgroundColor="@color/dashboardCardBuyer"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/date"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp" />

                                <TextView
                                    android:id="@+id/tv_Date_New_BuyerDashboardFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_medium"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <!--                PCA Card Buyer-->
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_PCAList_New_BuyerDashboardFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="0.3"
                        app:cardBackgroundColor="@color/colorPrimaryDarkBuyer"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/tv_PCACountLbl_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="@string/total_pcas_lbl"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16ssp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_PCACount_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_PCACountLbl_New_BuyerDashboardFragment"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/total_pcas_lbl_new"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_AddPCA_New_BuyerDashboardFragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="Add PCA"
                                app:fabCustomSize="@dimen/_30sdp"
                                app:rippleColor="@color/colorSecondary"
                                app:srcCompat="@drawable/baseline_add_24"
                                app:tint="@color/black" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_BuyerAuction_New_BuyerDashboardFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        app:cardBackgroundColor="@color/newDSCardColor"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAllocatedBags_New_BuyerDashboardFragment"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/allocated_lbl"
                                android:textSize="@dimen/_15ssp"
                                app:cornerRadius="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/tv_AllocatedBags_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/bags_lbl"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:id="@+id/tv_AllocatedRate_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/rate_lbl"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:id="@+id/tv_AllocatedTotalCost_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/cost_lbl"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_LiveAuction_New_BuyerDashboardFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        app:cardBackgroundColor="@color/newDSCardColor"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPurchasedBags_New_BuyerDashboardFragment"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/purchased_lbl"
                                android:textSize="@dimen/_15ssp"
                                app:cornerRadius="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/tv_PurchasedBags_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/bags_lbl"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_22ssp" />

                            <TextView
                                android:id="@+id/tv_PurchasedAvgRate_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/rate_lbl"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_22ssp" />

                            <TextView
                                android:id="@+id/tv_PurchasedTotalCost_New_BuyerDashboardFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/cost_lbl"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_22ssp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_PreviousAuction_New_BuyerDashboardFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        app:cardBackgroundColor="@color/newDSCardColor"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/tv_PreviousAuctionDate_New_BuyerDashboardFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/date_lbl"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/tv_PreviousAuctionPurchasedBags_New_BuyerDashboardFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/bags_lbl"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/tv_PreviousAuctionAvgRate_New_BuyerDashboardFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/avg_rate_lbl"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/tv_PreviousAuctionTotalCost_New_BuyerDashboardFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/total_cost_lbl"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />
                            </LinearLayout>

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btnDatePicker_New_BuyerDashboardFragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:contentDescription="Add PCA"
                                app:fabCustomSize="@dimen/_30sdp"
                                app:rippleColor="@color/colorSecondary"
                                app:srcCompat="@drawable/baseline_calendar_today_24"
                                app:tint="@color/colorPrimaryLightBuyer" />

                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>
</layout>