<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.IndividualPca.IndPCAProfileFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/main_rl_IndPCAProfileFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--            PCA View-->
                <LinearLayout
                    android:id="@+id/ll_PCAView_IndPCAProfileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/PCAProfileImg_IndPCAProfileFragment"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_10sdp"
                            android:src="@drawable/add_user"
                            app:civ_border_width="1dp" />

                        <TextView
                            android:id="@+id/tv_PCAName_IndPCAProfileFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_25ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_PCAEmail_IndPCAProfileFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_PCAPhoneNo_IndPCAProfileFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.4"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical|end"
                                android:text="@string/apmc_lbl"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp" />

                            <TextView
                                android:id="@+id/tv_PCAAPMC_IndPCAProfileFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.4"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="end|center_vertical"
                                android:text="@string/pan_card_lbl"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp" />

                            <TextView
                                android:id="@+id/tv_PCAPANCard_IndPCAProfileFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.4"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="end|center_vertical"
                                android:text="@string/aadhar_card_lbl"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp" />

                            <TextView
                                android:id="@+id/tv_PCAAadharCard_IndPCAProfileFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.4"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="end|center_vertical"
                                android:text="@string/gst_no_lbl"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp" />

                            <TextView
                                android:id="@+id/tv_PCAGSTNo_IndPCAProfileFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="@string/office_address"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/_18ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_PCAOfficeAddress_IndPCAProfileFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_18ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.4"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="end|center_vertical"
                                android:text="@string/city_lbl"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp" />

                            <TextView
                                android:id="@+id/tv_PCACity_IndPCAProfileFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_PCA_DeleteAccount_IndPCAProfileFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#E44E58"
                            android:text="@string/delete_account"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            app:cornerRadius="@dimen/_8sdp"
                            app:icon="@drawable/delete_profile_icon"
                            app:iconGravity="textStart"
                            app:iconTint="@color/black" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>